<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme" parent="android:Theme"></style>


    <style name="AppCompat" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>
    >

    <style name="AppCompat.NoTitleBar" parent="AppCompat"></style>

    <style name="AppCompat.NoTitleBar.Fullscreen" parent="AppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppCompat.Translucent" parent="AppCompat">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppCompat.Translucent.Fullscreen" parent="AppCompat.Translucent">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="AppCompat.CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
    </style>


    <!--
         A theme that has a translucent background.  Here we explicitly specify
         that this theme is to inherit from the system's translucent theme,
         which sets up various attributes correctly.
    -->

    <style name="Theme.GuideDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.ScreenSettingDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- START DEFINES REMOTE EXPLORER -->

    <style name="Theme.BorderlessDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!-- Edit Text -->

    <!-- Tab -->

    <style name="RVDialog">
        <item name="android:textColor">@color/color14</item>
        <item name="android:textSize">@dimen/size03</item>
    </style>

    <style name="RVDialogTitle">
        <item name="android:textColor">@color/color04</item>
        <item name="android:textSize">@dimen/size01</item>
    </style>

    <style name="ProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- <item name="android:windowTitleStyle">@null</item> -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- 새 다이얼로그 정의 끝 -->

    <style name="RVListViewDialogGroupTheme">
        <item name="android:background">@drawable/bg_dialogue_group</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dip</item>
        <item name="android:scrollbars">none</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:padding">0dip</item>
        <item name="android:layout_margin">0dip</item>
    </style>


    <style name="RVListViewDialogWhiteGroupTheme">
        <item name="android:background">@drawable/bg_dialogue_group_white</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dip</item>
        <item name="android:scrollbars">none</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:padding">0dip</item>
        <item name="android:layout_margin">0dip</item>
    </style>

    <!-- END DEFINES REMOTE EXPLORER -->

    <style name="Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>